        </div>
    </nav>


    <div id="section1" class="container-fluid">
        <br><br>
        <h1 class="text-center">ADD MOVIE</h1>
        <br><br>
        <form method="post" action="/adminaddmovie">
            <div class="mb-3">
              <input type="text" class="form-control" id="moviename" name="name" placeholder="Movie Name">
            </div>
            <div class="mb-3">
              <input type="date" class="form-control" id="startdate" name="startdate">
            </div>
            <div class="mb-3">
              <input type="date" class="form-control" id="enddate" name="enddate">
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" id="starttime" name="starttime" placeholder="Start time (__:__:__)">
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" id="duration" name="duration" placeholder="Duration (__:__:__)">
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" id="image" name="image" placeholder="Image Link">
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" id="video" name="video" placeholder="Trailor link">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="English" name="English" id="lang1">
                <label class="form-check-label" for="lang1">
                  English
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="Portugese" name="Portugese" id="lang2">
                <label class="form-check-label" for="lang2">
                  Portugese
                </label>
            </div>
            <br>
            <select class="form-select" name="genre" aria-label="Default select example">
                <option selected disabled>Select Genre</option>
                <option value="Action">Action</option>
                <option value="Romance">Romance</option>
                <option value="Thriller">Thriller</option>
                <option value="Horror">Horror</option>
            </select>
            <br>
            <div class="mb-3">
              <input type="number" class="form-control" id="price" name="price" placeholder="Price">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="2D" name="v2d" id="v2d">
                <label class="form-check-label" for="v2d">
                  2D
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="3D" name="v3d" id="v3d">
                <label class="form-check-label" for="v3d">
                  3D
                </label>
            </div>
            <br>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
          <br><br>
    </div>
    











    




